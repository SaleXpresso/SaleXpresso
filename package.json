{
  "name": "salexpresso",
  "version": "1.0.0",
  "description": "SaleXpresso",
  "main": "clear && gulp watch",
  "URL": "https://salexpresso.com",
  "scripts": {
    "install": "npm rebuild && npm run install-phpcs",
    "install-phpcs": "composer global require squizlabs/php_codesniffer dealerdirect/phpcodesniffer-composer-installer phpcompatibility/php-compatibility phpcompatibility/phpcompatibility-wp wp-coding-standards/wpcs automattic/vipwpcs",
    "start": "npm run watch",
    "test": "npm run phpcs && npm run eslint && npm run stylish",
    "phpcs": "phpcs . --standard=./phpcs.xml --extensions=php --report-file=./logs/phpcs.log",
    "eslint": "eslint . -o ./logs/eslint.log -f stylish --no-color; exit 0",
    "stylish": "stylelint --syntax scss **/*.scss -o ./logs/stylelint.log",
    "fix": "npm run phpcbf && npm run eslint-fix && npm run stylelint-fix",
    "phpcbf": "phpcbf --standard=./phpcs.xml --extensions=php --report-file=./logs/phpcbf.log .",
    "eslint-fix": "eslint --fix . -o ./logs/eslint-fix.log -f stylish --no-color",
    "stylelint-fix": "stylelint --syntax scss --fix **/*.scss  -o ./logs/stylelint-fix.log",
    "clean": "rm -rf assets/**/*.css* && rm -rf assets/**/*.js* && rm -rf logs/*.log* && rm -rf logs/**/*.log* && rm -rf dist/*.zip*",
    "watch": "webpack --mode=development --watch --config webpack.config.js",
    "build": "webpack --mode=production --config webpack.config.js",
    "make-zip": "npm run build && gulp make-zip"
  },
  "keywords": [
    "WooCommerce",
    "SaleXpresso",
    "CRM",
    "Sales Accelerator",
    "Marketing",
    "e-commerce",
    "store",
    "sales",
    "sell"
  ],
  "author": "SaleXpresso",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "url-search-params-polyfill": "^8.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@wordpress/eslint-plugin": "^4.1.0",
    "@wordpress/i18n": "^3.10.0",
    "autoprefixer": "^9.1.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.5.2",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "extract-loader": "^5.0.1",
    "file-loader": "^6.0.0",
    "gulp": "^4.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-wp-pot": "^2.4.0",
    "gulp-zip": "^5.0.1",
    "husky": "^4.2.3",
    "jquery": "^3.5.0",
    "pixrem": "^5.0.0",
    "postcss-loader": "^3.0.0",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.3.0",
    "stylelint-config-wordpress": "^16.0.0",
    "stylelint-scss": "^3.17.2",
    "terser-webpack-plugin": "^2.3.5",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "homepage": "https://salexpresso.com"
}
